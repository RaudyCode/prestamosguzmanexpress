extends ../layout/index

block contenido
    div(class="flex flex-col justify-center items-center py-5")
        div(class="max-w-96 py-5")
            img(src="/img/logo.svg", alt="Logo Presta G")
        div
            h2(class="text-center text-2xl font-extrabold")= pagina
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
            div(class="mt-8 mx-auto max-w-lg")
                div(class="bg-white py-8 px-4 shadow")
                    form.space-y-5(method="POST" action="/auth/olvide-password" novalidate)
                        input(type="hidden" name="_csrf" value=csrfToken)

                            
                        div 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Eamil de Registro

                            div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                                svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' style='fill: rgba(21, 128, 61, 1);transform: ;msFilter:;')
                                    path(d='M20 4H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2zm0 2v.511l-8 6.223-8-6.222V6h16zM4 18V9.044l7.386 5.745a.994.994 0 0 0 1.228 0L20 9.044 20.002 18H4z')

                                
                                input(id="email" class="w-full px-3 py-2 border border-none  placeholder-gray-400 focus:outline-none" placeholder="Tu Email" type="text" name="email" value= usuario ? usuario.email : '')

                        
    

                        div(class="flex items-center justify-end")
                            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sección
                        input(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")