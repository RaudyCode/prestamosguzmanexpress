extends ../layout/index.pug
block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" noValidate).space-y-5
                    input(type="hidden" name="_csrf" value=csrfToken )
                    div
                        label.block.text-sn.uppercase.text-gray-500.mb-3.font-bold(for="password") Coloca Tu Nuevo Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password")

                        div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                                svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' style='fill: rgba(21, 128, 61, 1);transform: ;msFilter:;')
                                    path(d='M12 2C9.243 2 7 4.243 7 7v3H6c-1.103 0-2 .897-2 2v8c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-8c0-1.103-.897-2-2-2h-1V7c0-2.757-2.243-5-5-5zm6 10 .002 8H6v-8h12zm-9-2V7c0-1.654 1.346-3 3-3s3 1.346 3 3v3H9z')

                                
                                input(id="password" class="w-full px-3 py-2 border border-none  placeholder-gray-400 focus:outline-none" placeholder="Tu Nuevo Password" type="password" name="password")

                        
                    input(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")