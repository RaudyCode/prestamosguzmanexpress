extends ../layout/dashboard

block contenido
    P(class="font-bold text-grey-200 text-center bg-indigo-600 p-2 mb-4 mt-2 text-white")=ruta.nombre
    h1(class="font-extrabold  text-2xl md:text-5xl mb-4")=pagina
    if errores
        div(class="max-w-md mx-auto my-10")
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    div
        div(class="bg-white py-8 px-4 shadow")
            form.space-y-5(method="POST" class="max-w-lg")
                input(type="hidden" name="_csrf" value=csrfToken)

                // Campo para el nombre completo del cliente
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre Completo
                    div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")

                        input(id="nombre" class="w-full px-3 py-2 border-none placeholder-gray-400 focus:outline-none" placeholder="Nombre Completo" type="text" name="nombre"  value=datos.nombre ? datos.nombre : '' required)

                // Campo para la cédula de identidad
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="cedula") Cédula de Identidad
                    div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                        input(id="cedula" class="w-full px-3 py-2 border-none placeholder-gray-400 focus:outline-none" placeholder="Cédula de Identidad" type="text" name="cedula" value=datos.cedula ? datos.cedula : '' required)

                // Campo para el número de teléfono
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="telefono") Teléfono
                    div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                        input(id="telefono" class="w-full px-3 py-2 border-none placeholder-gray-400 focus:outline-none" placeholder="Número de Teléfono" type="tel" name="telefono" value=datos.telefono ? datos.telefono : '' required)

                // Campo para el correo electrónico
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo Electrónico
                    div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                        input(id="email" class="w-full px-3 py-2 border-none placeholder-gray-400 focus:outline-none" placeholder="Correo Electrónico" type="email" value=datos.email ? datos.email : '' name="email")

                // Campo para la dirección del cliente
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="direccion") Dirección
                    div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                        textarea(id="direccion" class="w-full px-3 py-2 border-none placeholder-gray-400 focus:outline-none" placeholder="Dirección del Cliente" name="direccion"  required)=datos.direccion ? datos.direccion : ''



                // Botón para enviar el formulario
                input(id="btn" data-rutaId=`${ruta.id}` class="max-w-40 w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Editar Cliente")


block  scripts
    script(src="/js/flotante.js")


