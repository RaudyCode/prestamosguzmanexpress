extends ../layout/header-ruta

block contenido
    div(class="")
        h1(class="font-extrabold  text-2xl md:text-5xl mb-4") Gestión de Rutas 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        div
            div(class="bg-white py-8 px-4 shadow")
                form.space-y-5(method="POST" action="/rutas" novalidate class="max-w-lg")
                    input(type="hidden" name="_csrf" value=csrfToken)

                            
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Ruta

                        div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")

                                
                            input(id="nombre" class="w-full px-3 py-2 border border-none  placeholder-gray-400 focus:outline-none" placeholder="Nombre de la Ruta" type="text" name="nombre")

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="capital") Capital

                        div(class="flex gap-1 w-full px-3 py-2 border border-gray-300 rounded-md justify-center items-center")
                                
                            input(id="capital" class="w-full px-3 py-2 border border-none  placeholder-gray-400 focus:outline-none" placeholder="Capital de Ruta" type="number" name="capital")

                    div 
                        
                        label(for='diaCobro').block.text-sm.uppercase.text-gray-500.mb-2.font-bold Dia de Cobro:
                        select#diaCobro(name='diaCobro' class="w-full px-3 py-2 border   placeholder-gray-400 ")
                            option(value='Lunes') Lunes
                            option(value='Martes') Martes
                            option(value='Miércoles') Mi&eacute;rcoles
                            option(value='Jueves') Jueves
                            option(value='Viernes') Viernes
                            option(value='Sábado') S&aacute;bado
                            option(value='Domingo') Domingo

                    input(class="max-w-40 w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Ruta")



            h2(class="text-center font-extrabold text-4xl m-4") Rutas Creadas

            ul(class="")
                each ruta in rutas
                    
                    li(class="bg-white mb-2 rounded-md")
                        div(class="flex justify-between items-center pr-4")
                            div(class="flex gap-2")
                                div(class="bg-green-500 h-full p-4 rounded-md") 
                                    p(class="font-extrabold text-2xl text-white")=`${ruta.diaCobro.substring(0, 3)}`

                                a(href=`rutas/admin/${ruta.id}`)  
                                    p= ruta.nombre
                                    p= ruta.capital
                                
                            div 
                                div(class="flex gap-2")
                                    a(href="#" class=`w-full text-center cursor-pointer px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm bg-blue-100 text-blue-800`) Editar 
                                    a(href="#" class=`w-full text-center cursor-pointer px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm bg-red-100 text-red-800`) Eliminar  
                    
